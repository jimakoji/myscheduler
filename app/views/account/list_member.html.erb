<h1>ユーザー一覧(<%= @group.name %>)</h1>
<hr />
<table>
	<tr>
		<th>名前</th>
	</tr>

	<% for member in @members %>
		<tr>
			<td><%= member.name %></td>
			<td><%= link_to('編集', :action => 'edit_member', :id => member) %></td>
			<td><%= link_to('削除', {:action => 'destroy_member', :id => member}, :confirm => '削除しますか？', :post => true ) %></td>
		</tr>
	<% end %>
	</table>

