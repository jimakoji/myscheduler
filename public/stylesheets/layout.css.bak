@charset "UTF-8";
* {
  margin: 0;
  padding: 0;
  border: 0;
}
html, body {
  width:100%;
  height:100%;
  text-align:center;
  color:#fff;
  background-color:#ddd;
}
img {
  border:none;
}
a {
  text-decoration:none;
}
a:hover {
  text-decoration:underline;
}
dl dt {
  font-weight:bold;
}
/* ヘッダー、コンテンツを包むラッパー */
#wrapper {
  width:920px;
  height:100%;
  margin:0 auto;
  text-align:left;
  background-color:#cec078;
}
#header {
  height:120px;
  color:#fff;
  background-color:#9e8f46;
  overflow:hidden;
}
#header img {
  float:right;
}
#header h1 {
  margin-top:30px;
}
/* メイン、サイドを包む、フッターの位置を調節するためのラッパー */
#contents {
  padding-bottom:50px;
  /* フッターの高さに合わせてボトム値を修正する */
  color:#333;
}
#contents h1 {
  padding:10px;
}
.post {
  padding:10px;
  color:#333;
  background-color:#fff;
}
.post h2 {
  margin-bottom:5px;
}
.post p.body {
  padding:0 30px;
}
.post p.date {
  text-align:right;
}
.post p.link {
  text-align:right;
}
div.link {
  padding:10px;
}
#navi dl {
  height:50px;
}
#navi dl dt, dd {
  margin:0 0 0 10px;
  float:left;
}
#main {
}
/* フッターを定位置に配置するためのラッパー */
#footwrapper {
  width:920px;
  height:50px;
  margin:-50px auto 0 auto;
  /* フッターの高さに合わせてトップ値を修正する */
  color:#fff;
  background-color:#9e8f46;
}
#footer {
}
.inner {
  padding:10px;
}
.right {
  float:right;
}
.left {
  float:left;
}
.clear {
  clear:both;
}
input,textarea,select {
  padding:3px;
  border:2px #9e8f46 solid;
}
